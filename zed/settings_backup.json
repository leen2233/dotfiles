  // },
  "agent": {
    "play_sound_when_agent_done": true,
    "always_allow_tool_actions": false,
    "profiles": {
      "write": {
        "name": "Write",
        "tools": {
          "create_directory": true,
          "terminal": true,
          "batch_tool": true,
          "code_actions": true,
          "code_symbols": true,
          "contents": true,
          "copy_path": true,
          "create_file": true,
          "delete_path": false,
          "diagnostics": true,
          "edit_file": true,
          "fetch": true,
          "list_directory": true,
          "move_path": true,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "rename": true,
          "symbol_info": true,
          "thinking": true,
          "web_search": true
        },
        "enable_all_context_servers": true,
        "context_servers": {
          "request": {
            "tools": {
              "http_trace": true,
              "http_put": true,
              "http_post": true,
              "http_patch": true,
              "http_options": true,
              "http_head": true,
              "http_get": true,
              "http_delete": true,
              "get_stored_response_with_markdown": true,
              "get_stored_response": true
            }
          },
          "filesystem": {
            "tools": {
              "write_file": false,
              "search_files": false,
              "read_multiple_files": true,
              "read_file": false,
              "move_file": false,
              "list_directory": false,
              "list_allowed_directories": false,
              "get_file_info": false,
              "edit_file": false,
              "directory_tree": false,
              "create_directory": false
            }
          }
        }
      },
      "ask": {
        "name": "Ask",
        "tools": {
          "symbol_info": true,
          "terminal": true,
          "rename": true,
          "open": true,
          "move_path": true,
          "batch_tool": true,
          "code_actions": true,
          "code_symbols": true,
          "copy_path": true,
          "create_directory": true,
          "delete_path": false,
          "contents": true,
          "diagnostics": true,
          "fetch": true,
          "list_directory": true,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "thinking": true,
          "web_search": true,
          "create_file": true
        },
        "enable_all_context_servers": false,
        "context_servers": {}
      }
    },
    "default_profile": "write",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    },
    "version": "2"
  },
  "terminal": {
    "font_family": "JetBrains Mono",
    "env": {
      "EDITOR": "zed --wait"
    }
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
