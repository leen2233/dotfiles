  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "ui_font_size": 14,
  "buffer_font_size": 12,
  "buffer_font_family": "JetBrains Mono",
  "theme": {
    "mode": "system",
    "light": "Gruvbox Dark Hard",
    "dark": "Gruvbox Dark Hard"
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 500
    }
  },
  "proxy": "socks5://26.26.26.1:10808",
  "language_models": {
    "google": {
      "low_speed_timeout_in_seconds": 15
    }
  },
  "languages": {
    "Python": {
      "language_servers": ["ruff", "pyright"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.fixAll.ruff": true,
            "source.organizeImports.ruff": true
          }
        }
      ]
    }
  },
  "lsp": {
    "ruff": {
      "initialization_options": {
        "settings": {
          "lineLength": 120,
          "lint": {
            "extendSelect": ["I"]
          }
        }
      }
    },
    "pyright": {
      "settings": {
        "python": {
          "pythonPath": "./venv/bin/python"
        }
      }
    }
  },
  "git_panel": {
    "dock": "right"
  },
  "file_finder": {
    "modal_width": "medium"
  },
  "centered_layout": {
    "left_padding": 0.15,
    "right_padding": 0.15
  },
