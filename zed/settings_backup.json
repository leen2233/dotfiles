{
  "show_edit_predictions": false,
  "edit_predictions": {
    "disabled_globs": [],
    "mode": "eager",
    "enabled_in_text_threads": true
  },
  "ssh_connections": [
    {
      "host": "104.238.173.6",
      "username": "root",
      "projects": []
    }
  ],
  "features": {
    "edit_prediction_provider": "zed"
  },
  "vim_mode": false,
